{
  "expo": {
    "name": "Alles Gut",
    "slug": "alles-gut",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "allesgut",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2D7D46"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "app.allesgut.mobile",
      "infoPlist": {
        "NSCameraUsageDescription": "Kamera wird benötigt um QR-Codes zu scannen",
        "CFBundleLocalizations": ["de", "en"],
        "CFBundleDevelopmentRegion": "de"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2D7D46"
      },
      "package": "app.allesgut.mobile",
      "permissions": ["CAMERA", "VIBRATE", "RECEIVE_BOOT_COMPLETED"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#2D7D46"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Kamera wird benötigt um QR-Codes zu scannen"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "locales": {
      "de": "./locales/de.json"
    }
  }
}
