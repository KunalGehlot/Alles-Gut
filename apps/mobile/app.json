{
  "expo": {
    "name": "Alles Gut",
    "slug": "alles-gut",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "allesgut",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "app.allesgut.mobile",
      "infoPlist": {
        "NSCameraUsageDescription": "Kamera wird benötigt um QR-Codes zu scannen",
        "NSFaceIDUsageDescription": "FaceID wird verwendet, um die App sicher zu entsperren",
        "CFBundleLocalizations": [
          "de",
          "en"
        ],
        "CFBundleDevelopmentRegion": "de"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "app.allesgut.mobile",
      "permissions": [
        "CAMERA",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "android.permission.ACCESS_NOTIFICATION_POLICY",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "FaceID wird verwendet, um die App sicher zu entsperren"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#2D7D46"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Kamera wird benötigt um QR-Codes zu scannen"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "locales": {
      "de": "./locales/de.json"
    }
  }
}